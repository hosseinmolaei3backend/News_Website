@model IEnumerable<DataLayer.Models.Page>



<!-- slider -->
<div class="news-slider border-radius">
    <div id="slider-one" class="owl-carousel">
        @foreach (var item in Model)
        {
            <!-- each item -->
            <div class="item">
                <img src="~/Content/img/thumb.png">
                <div class="left-side">
                    <h2> <a href="/News/@item.PageId">@item.TitlePage</a> </h2>
                    <p>
                        @item.ShortDescription
                    </p>
                    <span> <i class="fa fa-calendar"></i> انتشار : @News.Tools.PersianDateConverter.ToShamsi(item.CreatDateTime)</span>
                </div>
                <div class="clearfix"></div>
            </div>
            <!-- end each item -->
        }
    </div>
    <a href="/Archive" class="news-archive"> <i class="icons icon-doc-1"></i> آرشیو کامل خبرها </a>
</div>
<!-- End slider -->
