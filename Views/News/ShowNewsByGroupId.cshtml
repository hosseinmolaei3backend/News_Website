@model IEnumerable<DataLayer.Models.Page>

@{
    ViewBag.Title = "ShowNewsByGroupId";
}
<div class="col-md-8 col-sm-12 col-xs-12 w-100">

    <nav aria-label="breadcrumb" dir="rtl">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">خانه</a></li>
            <li class="breadcrumb-item"><a href="/Archive">اخبار</a></li>
            <li class="breadcrumb-item active" aria-current="page">@ViewBag.name</li>
        </ol>
    </nav>

    <!-- last news -->
    <section class="last-news-section border-radius">
        <header><i class="icons icon-doc-2"></i>  <h3> آرشیو اخبار @ViewBag.name</h3> </header>
        <ul>
            @foreach (var item in Model)
            {
                <li>
                    <img class="border-radius" src="~/Content/img/logo.png">
                    <h2> <a href="/News/@item.PageId"> @item.TitlePage </a></h2>
                    <p>
                       @item.ShortDescription
                    </p>
                    <span class="date-publish"><i class="fa fa-calendar"></i> انتشار : @News.Tools.PersianDateConverter.ToShamsi(item.CreatDateTime) </span>
                    <a href="/News/@item.PageId" class="more-link"><i class="icons icon-more"></i></a>
                </li>
            }


        </ul>
    </section>
    <!-- End last news -->
</div>

