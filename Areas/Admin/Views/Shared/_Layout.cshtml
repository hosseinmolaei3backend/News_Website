<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/bootstrap-5.2.1-dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-5.2.1-dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
    <link href="~/Content/css/style.css" rel="stylesheet" />
</head>
<body dir="rtl">
    <nav class="main-menu">
        <div class="container">
            <span><i class="fa fa-th-list"></i></span>
            <ul>
                <li><a href="/Home"> صفحه اصلی </a></li>
                <li><a href="/Archive"> آرشیو </a></li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li><a href="">  @User.Identity.Name خوش آمدید </a></li>
                    <li><a href="/Account/SignOut">خروج  </a></li>
                }
                else
                {
                    <li><a href="/Account/Login"> ورود به سایت </a></li>
                }
                <li class="ms-2"><a href="/Admin/PageGroups"> مدیریت گروه </a></li>
                <li class="ms-2"><a href="/Admin/Pages">مدیریت صفحه  </a></li>
            </ul>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()

    </div>
    <footer class="text-center">
        <p> &copy; برنامه ASP.NET  من - @News.Tools.PersianDateConverter.ToShamsi(DateTime.Now)</p>
    </footer>
    <script src="~/Scripts/jquery-3.6.4.min.js"></script>
    <script src="~/Content/js/jquery.validate.min.js"></script>
    <script src="~/Content/bootstrap-5.2.1-dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>